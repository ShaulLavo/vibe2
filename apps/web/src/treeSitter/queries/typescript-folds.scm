; TypeScript-specific declarations
(interface_declaration) @fold
(type_alias_declaration) @fold
(enum_declaration) @fold
(internal_module) @fold
(module) @fold

; Functions and Classes (inherited from JS)
[
  (function_declaration)
  (class_declaration)
  (method_definition)
  (arrow_function)
  (object)
  (import_statement)
] @fold

; Control flow statements
[
  (if_statement)
  (else_clause)
  (for_statement)
  (for_in_statement)
  (while_statement)
  (do_statement)
  (switch_statement)
  (switch_case)
  (switch_default)
  (try_statement)
  (catch_clause)
  (finally_clause)
] @fold
