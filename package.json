{
  "name": "vibe",
  "private": true,
  "scripts": {
    "generate:logger-toggles": "bun scripts/generate-logger-toggle-defaults.ts",
    "generate:ts-file": "bun scripts/generate-ts-file.ts",
    "predev": "bun run generate:logger-toggles && (test -d packages/icons/dist/vs || bun run --filter @repo/icons build)",
    "prebuild": "bun run generate:logger-toggles && (test -d packages/icons/dist/vs || bun run --filter @repo/icons build)",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "repo:health": "turbo run repo:health --parallel",
    "postinstall": "bun --cwd apps/web run copy-tree-sitter-assets",
    "depcheck": "turbo run depcheck --parallel",
    "unimported": "turbo run unimported --parallel",
    "tsprune": "turbo run tsprune --parallel"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "depcheck": "^1.4.7",
    "prettier": "^3.6.2",
    "ts-prune": "^0.10.3",
    "turbo": "^2.6.1",
    "typescript": "5.9.2",
    "unimported": "^1.31.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "sqlite-wasm": "^0.0.2"
  }
}