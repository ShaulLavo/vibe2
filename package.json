{
  "name": "vibe",
  "devDependencies": {
    "@tsconfig/bun": "^1.0.10",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "@tsconfig/recommended": "^1.0.13",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/browser-preview": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vitest/web-worker": "^4.0.16",
    "depcheck": "^1.4.7",
    "playwright": "^1.57.0",
    "prettier": "^3.6.2",
    "ts-prune": "^0.10.3",
    "turbo": "^2.6.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.2",
    "unimported": "^1.31.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.22",
  "private": true,
  "scripts": {
    "generate:ts-file": "bun scripts/generate-ts-file.ts",
    "fetch-icons": "turbo run fetch-icons",
    "prebuild": "test -d packages/icons/dist/vs || bun run --filter @repo/icons build",
    "build": "turbo run build",
    "dev": "bun run build:submodules && turbo run dev --filter=!desktop --filter=!ghostty-web --filter=!vitest-browser-solid",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "repo:health": "turbo run repo:health --parallel",
    "postinstall": "bun run --cwd=apps/web copy-tree-sitter-assets && bun run build:submodules",
    "build:submodules": "bun run build:just-bash && bun run build:sqlite-wasm && bun run build:icons",
    "build:just-bash": "test -d packages/just-bash/dist/bundle || bun run --cwd=packages/just-bash build",
    "build:sqlite-wasm": "test -d packages/sqlite-wasm/dist/client || bun run --cwd=packages/sqlite-wasm build:client",
    "build:icons": "test -d packages/icons/dist/vs || bun run --cwd=packages/icons init",
    "serve": "bun run --cwd apps/web serve",
    "depcheck": "turbo run depcheck --parallel",
    "unimported": "turbo run unimported --parallel",
    "tsprune": "turbo run tsprune --parallel",
    "build:fresh": "bun run --cwd packages/icons init && bun run --cwd packages/sqlite-wasm build && bun run --cwd apps/web build && bun run --cwd apps/web start"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "vite": "^7.3.0"
  },
  "dependencies": {
    "@lightningjs/renderer": "^2.20.0",
    "up-fetch": "^2.5.0"
  }
}