{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "VITE_SERVER_PORT",
    "VITE_WEB_PORT",
    "VITE_API_ORIGIN",
    "VITE_WEB_ORIGIN",
    "WEB_ORIGIN",
    "DEV"
  ],
  "globalDependencies": [".env*", "apps/*/.env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "apps/*/.env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "depcheck": {
      "dependsOn": ["^depcheck"]
    },
    "unimported": {
      "dependsOn": ["^unimported"]
    },
    "tsprune": {
      "dependsOn": ["^tsprune"]
    },
    "repo:health": {
      "dependsOn": ["^repo:health"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
